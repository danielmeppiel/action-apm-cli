{
  "name": "action-apm-cli",
  "version": "1.0.0",
  "description": "GitHub Action for running AI workflows with APM CLI",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/main.ts --license licenses.txt",
    "package": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "all": "npm run build && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/github/action-apm-cli.git"
  },
  "keywords": [
    "actions",
    "node",
    "apm",
    "ai",
    "llm",
    "workflow",
    "continuous-ai"
  ],
  "author": "Daniel Meppiel",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.9",
    "@typescript-eslint/parser": "^8.15.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^9.16.0",
    "eslint-plugin-github": "^5.0.1",
    "eslint-plugin-jest": "^28.6.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2"
  },
  "engines": {
    "node": ">=18.14.0"
  }
}
